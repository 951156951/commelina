<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- 导入jinx 系统web配置 -->
    <!-- 使Spring关注Annotation -->
    <context:annotation-config/>
    <!-- 启用spring MVC注解支持-->
    <mvc:annotation-driven>
        <mvc:message-converters register-defaults="true">
            <!--<bean class="org.springframework.http.converter.StringHttpMessageConverter"/>-->
            <bean class="com.framework.webmvc.JsonMessageConverter"/>
            <!--<bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>-->
        </mvc:message-converters>
    </mvc:annotation-driven>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/api"/>
            <mvc:mapping path="/api/*"/>
            <bean class="com.framework.webmvc.AuthenticatedApiInterceptor"></bean>
        </mvc:interceptor>
        <bean class="com.framework.webmvc.AuthenticatedWebInterceptor"></bean>
    </mvc:interceptors>

    <!-- 拦截器配置 -->
    <bean class="com.framework.webmvc.JsonExceptionHandlerResolver"></bean>

    <!-- session 实现 -->
    <bean class="com.foundation.app.SessionHandlerImpl"></bean>

</beans>