<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>com.nexus.maven</groupId>
        <artifactId>framework-root</artifactId>
        <version>1.0.0</version>
        <relativePath>./framework</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.game</groupId>
    <artifactId>game-root</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>
    <name>root</name>

    <modules>
        <module>framework</module>

        <!--<module>game-http-api</module>-->
        <module>game-gateway</module>
        <!--<module>game-matching</module>-->
        <!--<module>game-room</module>-->

        <!--<module>game-robot</module>-->
    </modules>

    <properties>
        <docker.image.prefix>game</docker.image.prefix>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/game-robot/src/main/proto/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/game-gateway/src/main/proto/</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>${basedir}/game-matching/src/main/proto/</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>${basedir}/game-room/src/main/proto/</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>${basedir}/framework/02-niosocket/src/main/proto/</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>