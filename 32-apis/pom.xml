<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>com.foundation.app</groupId>
        <artifactId>app-root</artifactId>
        <version>1.0.0</version>
        <relativePath>../01-foundation-app</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>twentyfourpoints-apis</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0</version>

    <properties>
        <docker.image.prefix>app-api</docker.image.prefix>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.foundation.app</groupId>
            <artifactId>foundation-app-platform</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.4.3</version>
                <configuration>
                    <imageName>${docker.image.prefix}/${project.artifactId}</imageName>
                    <dockerDirectory>src/docker</dockerDirectory>
                    <resources>
                        <resource>
                            <targetPath>/</targetPath>
                            <directory>${project.build.directory}</directory>
                            <include>${project.build.finalName}.jar</include>
                        </resource>
                    </resources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>com.twentyfourpoints.api.ApiBoot</mainClass>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>