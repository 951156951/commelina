<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.freedompy.commelina</groupId>
        <artifactId>match24-parent</artifactId>
        <version>${revision}</version>
        <relativePath>../</relativePath>
    </parent>

    <artifactId>match24-play-parent</artifactId>
    <packaging>pom</packaging>

    <modules>
        <module>gateway</module>
        <module>match</module>
        <module>room</module>

        <module>robot</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.freedompy.commelina</groupId>
            <artifactId>kernel-niosocket</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.freedompy.commelina</groupId>
            <artifactId>kernel-akka</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-actor-to-gateway</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/actor_config/gateway/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/actor_config/</directory>
                                    <filtering>true</filtering>
                                    <includes>*.conf</includes>
                                    <excludes>
                                        <exclude>.gitignore</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-actor-to-matching</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/actor_config/matching/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/actor_config/</directory>
                                    <filtering>true</filtering>
                                    <includes>*.conf</includes>
                                    <excludes>
                                        <exclude>.gitignore</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-actor-to-room</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/actor_config/room/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/actor_config/</directory>
                                    <filtering>true</filtering>
                                    <includes>*.conf</includes>
                                    <excludes>
                                        <exclude>.gitignore</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy-actor-to-gateway-server</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/gateway/src/main/resources</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/actor_config/gateway/</directory>
                                    <filtering>true</filtering>
                                    <includes>*.conf</includes>
                                    <excludes>
                                        <exclude>.gitignore</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-actor-to-matching-server</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/matching//src/main/resources</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/actor_config/matching/</directory>
                                    <filtering>true</filtering>
                                    <includes>*.conf</includes>
                                    <excludes>
                                        <exclude>.gitignore</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-actor-to-room-server</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/room//src/main/resources</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/actor_config/room/</directory>
                                    <filtering>true</filtering>
                                    <includes>*.conf</includes>
                                    <excludes>
                                        <exclude>.gitignore</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy-proto-to-gateway</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/gateway/src/main/proto/proto/copy</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/messages/common/</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>${basedir}/messages/server-matching-room/</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-proto-to-matching</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/matching/src/main/proto/proto/copy</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/messages/common/</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>${basedir}/messages/server-matching-room/</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-proto-to-room</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/room/src/main/proto/proto/copy</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/messages/common/</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>${basedir}/messages/server-matching-room/</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>